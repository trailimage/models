{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "Test",
         "command": "./node_modules/.bin/jest",
         "args": ["--verbose"],
         "type": "shell",
         "group": "test",
         "problemMatcher": []
      },
      {
         "label": "Update Docs",
         "command": "./node_modules/.bin/typedoc",
         "args": [
            "--out",
            "./doc/",
            "./lib/",
            "--mode",
            "modules",
            "--tsconfig",
            "tdconfig.json",
            "--readme",
            "README.md"
         ],
         "type": "shell",
         "group": "test",
         "problemMatcher": []
      }
   ]
}
